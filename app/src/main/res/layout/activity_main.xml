<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/black"
    >

    <TextView
        android:id="@+id/textView_hour_minute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="15:30"
        android:layout_centerInParent="true"
        android:textSize="120sp"
        android:textColor="@color/blue"
        />

    <TextView
        android:id="@+id/textView_second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="23"
        android:textSize="60sp"
        android:textColor="@color/blue"
        android:layout_toEndOf="@id/textView_hour_minute"
        android:layout_alignBaseline="@id/textView_hour_minute"
        android:layout_marginStart="8dp"
        />

    <ImageView
        android:id="@+id/imageView_settings"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:contentDescription="@string/desc_settings"
        android:src="@drawable/ic_build"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="8dp"

        />

    <ImageView
    android:id="@+id/imageView_close"
    android:layout_width="32dp"
    android:layout_height="32dp"
    android:contentDescription="@string/desc_close_settings"
    android:src="@drawable/ic_close"
    android:layout_alignParentEnd="true"
    android:layout_alignParentBottom="true"
    android:layout_marginEnd="32dp"
        />

    <TextView
        android:id="@+id/textView_battery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:text="85%"
        android:color="@color/gray"
        android:textSize="18sp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        />

    <CheckBox
        android:id="@+id/checkBox_battery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_battery_level"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/gray"
        android:layout_marginStart="32dp"
        android:checked="true"
        />


</RelativeLayout>